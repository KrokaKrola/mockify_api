{
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 100,
  "tabWidth": 4,
  "useTabs": false,
  "plugins": ["@ianvs/prettier-plugin-sort-imports"],
  "importOrder": [
    "<BUILTIN_MODULES>",
    "",
    "^@nestjs/(.*)$",
    "",
    "<THIRD_PARTY_MODULES>",
    "<TYPES>",
    "",
    "^@/(.*)$",
    "^~/(.*)$",
    "^[./]",
    "",
    "<TYPES>^[.]"
  ],
  "importOrderParserPlugins": [
    "classProperties",
    "decorators-legacy",
    "jsx",
    "typescript"
  ]
}
